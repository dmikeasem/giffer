<% if !user_signed_in? %>
  <div class="center">
    <br>
    <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-lg btn-primary" %>
    <%= link_to 'Login', new_user_session_path, class: "btn btn-lg btn-default" %>
  </div>
<% end %>
<% if user_signed_in? %>
  <%= link_to "/posts/new", class: "btn btn-full btn-default" do %>
    <span class="inline-reg">New Post</span>
    <span class="inline-big">+</span>
  <% end %>
<% end %>

<table>
  <div>
    <% @posts.each do |post| %>
      <div class="post-wrapper">
        <%= link_to post do %>
          <div ><%= image_tag post.image.url, class: 'mediumIMG post-img' %></div>
          <div class="gradient"></div>
          <div class="post-title">
            <h2> <%= post.title %></h2>
          </div>
    <!--         <div><%= post.body %></div> -->
          <div class="username caption">
            <%= post.user.username %>
          </div>
        <% end %>

      <!--   <div><%= link_to 'Show', post %></div> --><!--
        <% if post.user == current_user %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %> -->
      </div>
    <% end %>
  </div>
</table>
