
<%= link_to 'Create New Post +', "/posts/new", class: "btn btn-lg btn-primary" %>

<p>
  <strong>Posts</strong>

<table>
  <div>
    <% @user.posts.each do |post| %>
      <div class="post-wrapper">
        <div ><%= link_to image_tag(post.image.url, class: 'mediumIMG post-img'), post %></div>
        <div class="gradient"></div>
        <div class="post-title">
          <h2> <%= post.title %></h2>
        </div>
  <!--         <div><%= post.body %></div> -->
        <div class="username caption">
          <%= post.user.username %>
        </div>


      <!--   <div><%= link_to 'Show', post %></div> --><!--
        <% if post.user == current_user %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %> -->
      </div>
    <% end %>
  </div>
</table>
</p>
